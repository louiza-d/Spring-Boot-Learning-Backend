# .env.example - template for environment variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file (it contains secrets)

# Database
DB_URL=jdbc:mysql://localhost:3306/employee
DB_USERNAME=root
DB_PASSWORD=your-database-password

# JWT (use a strong secret - minimum 256 bits in production)
JWT_SECRET=your-secure-jwt-secret-minimum-32-characters
JWT_EXPIRATION_MS=86400000

# Mail (use app-specific password for Gmail or transactional provider)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# Logging
LOG_HOME=logs
